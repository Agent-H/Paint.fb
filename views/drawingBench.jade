			.propertyItem#brushSize
				.pull-left
					.clearfix
						span.pull-left Taille :
						input#brushSizeInput.sizeInput.pull-left
					#brushSizeSlider
				
				canvas#brushPreview(width='100', height='100')
				
			.propertyItem#fontSize
				.pull-left
					.clearfix
						span.pull-left Taille :
						.input-append.pull-left
							input#fontSizeInput.sizeInput
							span.add-on pt
					#fontSizeSlider
			
			.propertyItem#fontAttributes
				select#fontFamily
					option.font-arial(value='Arial', selected='selected') Arial
					option.font-arialblack(value='Arial Black') Arial Black
					option.font-comic(value='Comic Sans MS') Comic Sans MS
					option.font-courier_new(value='Courier New') Courier New 
					option.font-georgia(value='Georgia') Georgia
					option.font-impact(value='impact') Impact
					option.font-times(value='Times New Roman') Times New Roman		
					option.font-trebuchet(value='Trebuchet MS') Trebuchet MS
					option.font-veranda(value='Veranda') Veranda
					option.font-webdings(value='Webdings') Webdings
				div
					label.checkbox.inline
						input.fontAttribute(type="checkbox", value="italic") 
						| Italique
					label.checkbox.inline
						input.fontAttribute(type="checkbox", value="bold") 
						| Gras
			.propertyItem#fillSwitch
				div
					label.checkbox
						input.fillSwitch(type="checkbox", value="fill") 
						| Remplissage
					label.checkbox
						input.fontAttribute(type="checkbox", value="stroke", checked="checked") 
						| Contour
			
			
		#drawingArea
			canvas.drawing_canvas#canvas(width='#{canvas.width}', height='#{canvas.height}')
			canvas.drawing_canvas#buffer(width='#{canvas.width}', height='#{canvas.height}')