	div
		#toolBox
			.toolButton.tool_paint.active(data-tool='paint')
			.toolButton.tool_rect(data-tool='rect')
			.toolButton.tool_ellipse(data-tool='ellipse')
			.toolButton.tool_line(data-tool='line')
			.toolButton.tool_text(data-tool='text')
		#propertyBox
			#colorPalette.propertyItem
				.currentColor.secondary
				.currentColor.primary
				table
					tr
						td
